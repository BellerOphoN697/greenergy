        <section class="content-main">
            <form id="form" action="/admin/brand-add" method="post" enctype="multipart/form-data">

            <div class="row">
                <div class="col-6">
                    <div class="content-header">
                        <h2 class="content-title">Add Brand</h2>
                        
                        
                        <div>
                            <!--
                            <button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Save to draft</button>
                            -->
                            <button type="submit" class="btn btn-md rounded font-sm hover-up"  >Save</button>
                            
                        </div>
                    </div>
                    
                    <div  class=" text-danger">
                        <h4 class=" text-danger">{{message}}</h4>
                    </div>
                </div>
            </div>
            

            <div class="row">
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>Details</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Brand name</label>
                                        <input name="name" id="name" type="text" class="form-control">
                                        <span id="nameError" class="text-danger"></span> <!-- Error message placeholder -->

                                    </div>
                                </div> <!-- col.// -->
                                <div class="col-md-9">
                                    <label class="form-check" style="display: none;">
                                            <input type="checkbox" name="imgUpdate"  class="form-check-input" value="1" checked >
                                            <span class="form-check-label">Update Images</span>
                                        </label>
                                    <div class="mb-4">
                                        <label class="form-label">Images</label>
                                        <span id="imagesError" class="text-danger"></span> <!-- Error message placeholder -->

                                        <input class="form-control" type="file" name="image" id="image" accept="image/*" >
                                    </div>
                                </div> <!-- col.// -->
                            </div> <!-- row.// -->
                            
                        </div>
                    </div>
                </div>
            </div>
            </div>



            </form>

        </section> <!-- content-main end// -->
        <script src="/assets/js/namecheck.js"></script>

