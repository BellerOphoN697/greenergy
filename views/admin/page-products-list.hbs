
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                </div>
                <div>
                    
                    <a href="/admin/product-add" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col col-check flex-grow-0">
                            <div class="form-check ms-2">
                                <input class="form-check-input" type="checkbox" value="">
                            </div>
                        </div>
                        <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                            <select class="form-select">
                                <option selected>All category</option>
                                {{#each products}}
                                <option value="{{this.category._id}}">{{this.category.name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <!--
                            <div class="col-md-2 col-6">
                            <input type="date" value="02.05.2021" class="form-control">
                        </div>
                        -->
                        <div class="col-md-2 col-6">
                            <select class="form-select">
                                <option selected>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                {{#each products}}
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <style>.table td,.table th {vertical-align: middle;}</style>    
                            <thead>
                                <tr>
                                    <th scope="col">SKU#</th>
                                    <th scope="col"></th>

                                    <th scope="col">Name</th>
                                    <th scope="col">Selling Price</th>
                                    <th scope="col">Stocks</th>
                                    <th scope="col">Status</th>
                                    <th scope="col"> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><b>{{this.sku}}</b></td>
                                    <td style="max-width: 40px;"><img src="/images/{{this.images.[0]}}" alt="product image"></td>
                                    <td>{{this.name}}</td>
                                    <td>Rs. {{this.sp}}</td>
                                    <td>{{this.stock}}</td>
                                    {{#if delete}}
                                    <td><span class="badge rounded-pill alert-danger">Deleted</span></td>
                                    <td>
                                        <a href="#" onclick="actProduct()" class="btn btn-md rounded font-sm">Toggle Status</a>
                                    </td>
                                    {{else}}
                                    <td><span class="badge rounded-pill alert-success">Active</span></td>
                                    <td>
                                        <a href="#" onclick="dltProduct()" class="btn btn-md rounded font-sm">Toggle Status</a>
                                    </td>
                                    {{/if}}
                                </tr>
                            </tbody>
                        </table>
                    </div> <!-- table-responsive //end -->
                </div> <!-- card-body end// -->
                {{/each}}            

