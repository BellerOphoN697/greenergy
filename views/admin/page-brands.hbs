                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="row gx-3">
                        {{#each brands}}
                        
                            <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                            <figure class="card border-1">
                                <a href="brand-edit?id={{this._id}}">
                                    <div class="card-header bg-white text-center" style="height: 100px;">
                                    <img height="76" src="/images/{{this.image}}" class="img-fluid" style="max-height: 100%;max-width:100%" alt="Logo">
                                    </div>
                                    <figcaption class="card-body text-center ">
                                        {{#if delete}}
                                        <h6 class="card-title m-0" >{{this.name}}&#10060;</h6>
                                        {{else}}
                                        <h6 class="card-title m-0">{{this.name}}</h6>
                                        {{/if}}
                                    </figcaption>
                                </a>
                                
                            </figure>
                        </div> <!-- col.// -->
                        

                        {{/each}}
                    </div> <!-- row.// -->
                </div> <!-- card-body end// -->
