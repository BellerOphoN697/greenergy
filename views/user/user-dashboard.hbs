
    <!-- dashboard Secton Start  -->
    <div class="dashboard section">
      <div class="container">
        <div class="row dashboard__content">





          
          <div class="col-lg-9 section--xl pt-0">
            <div class="container">
              <!-- User Info -->
              <div class="row">
                <!-- User Profile  -->
                {{#each user}}
                <div class="col-lg-7">
                  <div class="dashboard__user-profile dashboard-card">
                    <div class="dashboard__user-profile-img">
                      <img src="src/images/user/img-07.png" alt="userImg" />
                    </div>
                    <div class="dashboard__user-profile-info">
                      <h5 class="font-body--xxl-500 name">{{this.first_name}} {{this.last_name}}</h5>
                      <p class="font-body--md-400 designation">Customer</p>
                      {{!-- <a
                        href="profile"
                        class="edit font-body--lg-500"
                      >
                        Edit Profile
                      </a> --}}
                    </div>
                  </div>
                </div>
                {{/each}}
                <!-- User Billing Address -->
                <div class="col-lg-5">
                  <div class="dashboard__user-billing dashboard-card">
                    <h2 class="dashboard__user-billing-title font-body--md-500">
                      Default Address
                    </h2>
                    <div class="dashboard__user-billing-info">
                      <h5
                        class="dashboard__user-billing-name font-body--xl-500"
                      >
                        {{address.name}}
                      </h5>
                      <p
                        class="
                          dashboard__user-billing-location
                          font-body--md-400
                        "
                      >
                        {{address.addr1}}, {{address.addr2}}, {{address.city}}, {{address.state}}, {{address.country}}-{{address.pincode}}
                      </p>
                      <p
                        class="dashboard__user-billing-email font-body--lg-400"
                      >
                        {{address.email}}
                      </p>
                      <p
                        class="dashboard__user-billing-number font-body--lg-400"
                      >
                        {{address.phone}}
                      </p>
                    </div>
                    <a
                      href="address-edit?_id={{address._id}}"
                      class="
                        dashboard__user-billing-editaddress
                        font-body--lg-500
                      "
                    >
                      Edit address</a
                    >
                  </div>
                </div>
              </div>
              <!-- Order History  -->
              <div class="dashboard__order-history" style="margin-top: 24px">
                <div class="dashboard__order-history-title">
                  <h2 class="font-body--xxl-500">Recent Order History</h2>
                  <a href="order-history.html" class="font-body--lg-500">
                    View All</a
                  >
                </div>
                <div class="dashboard__order-history-table">
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th
                            scope="col"
                            class="dashboard__order-history-table-title"
                          >
                            Order Id
                          </th>
                          <th
                            scope="col"
                            class="dashboard__order-history-table-title"
                          >
                            Date
                          </th>
                          <th
                            scope="col"
                            class="dashboard__order-history-table-title"
                          >
                            Total
                          </th>
                          <th
                            scope="col"
                            class="dashboard__order-history-table-title"
                          >
                            Status
                          </th>
                          <th
                            scope="col"
                            class="dashboard__order-history-table-title"
                          ></th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each order}}
                        <tr>
                          <!-- Order Id  -->
                          <td
                            class="dashboard__order-history-table-item order-id"
                          >
                            #{{this.payref}}
                          </td>
                          <!-- Date  -->
                          <td
                          id="datecell-{{this._id}}"
                            class="
                              dashboard__order-history-table-item
                              order-date
                            "
                            >
                          {{dateFormat this.createdAt}}


                          </td>
                          <!-- Total  -->
                          <td
                            class="
                              dashboard__order-history-table-item
                              order-total
                            "
                          >
                            <p class="order-total-price">
                              Rs. {{this.total}}
                              <!--<span class="quantity"> (4 Products)</span>-->
                            </p>
                          </td>
                          <!-- Status -->
                          <td
                            class="
                              dashboard__order-history-table-item
                              order-status
                            "
                          >
                            {{this.status}}
                          </td>
                          <!-- Details page  -->
                          <td
                            class="
                              dashboard__order-history-table-item
                              order-details
                            "
                          >
                            <a href="order-details?_id={{this._id}}"> View Details</a>
                          </td>
                        </tr>


                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
