
    <!-- dashboard Secton Start  -->
    <div class="dashboard section">
      <div class="container">
        <div class="row dashboard__content">
          
          






          <div class="col-lg-9 section--xl pt-0">
            
            <div class="container">
              

              <!-- Billing Address  -->
              <div class="dashboard__content-card">
                <div class="dashboard__content-card-header">
                  <h5 class="font-body--xxl-500">Billing Address</h5>
                </div>
                <div class="dashboard__content-card-body">
                  <form id="addressform" action="/address-edit" method="post">
                    <div class="contact-form__content">
                      <div class="text-danger">{{message}}</div>
                      <div>
                        <br>
                        <input class="form-check-input" type="checkbox" name="default" id="default" value="true">
                        <label for="default">Set as Default</label>
                        <br><br>
                      </div>


                      <div class="contact-form__content-group">
                        <input type="text" name="_id" id="_id" value="{{data._id}}" style="display: none;">

                        <div class="contact-form-input">
                          <label for="name"> Name </label>
                          <input
                            pattern="[a-z A-Z]+"
                            title="Only alphabets are allowed"
                            value="{{data.name}}"

                            type="text"
                            id="name"
                            name="name"
                            placeholder=" Name"
                            required
                          />
                        </div>
                        <div class="contact-form-input">
                          <label for="pincode">
                            Pincode
                          </label>
                          <input
                            type="number"
                            id="pincode"
                            value="{{data.pincode}}"
                            name="pincode"
                            placeholder="Pincode"
                             min="100000" max="999999"
                            title="Enter valid pincode"
                            required
                          />
                        </div>
                      </div>
                      <div class="contact-form-input">
                        <label for="addr1">Address Line 1</label>
                        <input
                          type="text"
                          id="addr1"
                          value="{{data.addr1}}"
                          name="addr1"
                          placeholder="Your address"
                          required
                        />
                      </div><div class="contact-form-input">
                        <label for="addr1">Address Line 2</label>
                        <input
                          type="text"
                          id="addr2"
                          value="{{data.addr2}}"
                          name="addr2"
                          placeholder="Your address"
                          required
                        />
                      </div>
                      <div class="contact-form-input">
                        <label for="addr2">Landmark</label>
                        <input
                          type="text"
                          id="mark"
                          value="{{data.mark}}"
                          name="mark"
                          placeholder="Your address"
                          
                        />
                      </div>
                      <div class="contact-form__content-group">
                        <div class="contact-form-input">
                          <label for="city">City</label>
                          <input
                            pattern="[a-z A-Z]+"
                            title="Only alphabets are allowed"
                            type="text"
                            id="city"
                            value="{{data.city}}"
                            name="city"
                            placeholder="City"
                            required
                          />
                        </div>
                        <div class="contact-form-input">
                          <label for="state">State</label>
                          <input
                            pattern="[a-z A-Z]+"
                            title="Only alphabets are allowed"
                            type="text"
                            id="state"
                            name="state"
                            value="{{data.state}}"
                            placeholder="State"
                            required
                          />
                        </div>
                        <div class="contact-form-input">
                          <label for="country">Country / Region </label>
                          <select
                            id="country"
                            name="country"
                            class="contact-form-input__dropdown"
                            required
                          >
                          <option value="{{data.country}}"  selected>{{data.country}}</option>
                            <option value="India">India</option>
                          </select>
                        </div>
                      </div>
                      <div class="contact-form__content-group">
                        <div class="contact-form-input">
                          <label for="email"> email </label>
                          <input
                            type="email"
                            id="email"
                            value="{{data.email}}"
                            name="email"
                            placeholder="Email Address"
                          />
                        </div>
                        <div class="contact-form-input">
                          <label for="phone"> Phone </label>
                          <input
                            type="number"
                            id="phone"
                            name="phone"
                            min="1000000000" max="9999999999"

                            value="{{data.phone}}"
                            placeholder="Phone number"
                            required
                          />
                        </div>
                      </div>
                      <!-- Address types  -->

                      <div class="contact-form__content-group">
                            <div class="bill-card__payment-method">
                                <div>Address Type</div>
                                <div class="bill-card__payment-method-item">
                                    <div class="form-check">
                                    <input
                                        class="form-check-input"
                                        type="radio"
                                        name="type"
                                        id="home"
                                        value="true"
                                        {{#if data.type}}checked{{/if}}
                                    />
                                    <label
                                        class="form-check-label font-body--400"
                                        for="home"
                                    >
                                        Home
                                    </label>
                                    </div>
                                    <div class="bill-card__payment-method-item">
                                        <div class="form-check">
                                        <input
                                            class="form-check-input"
                                            type="radio"
                                            name="type"
                                            id="office"
                                            value="false"
                                        {{#unless data.type}}checked{{/unless}}
                                        />
                                        <label
                                            class="form-check-label font-body--400"
                                            for="office"
                                        >
                                            Office
                                        </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>        
                      <div class="contact-form-btn">
                        <button class="button button--md" type="submit">
                          Save Changes
                        </button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>

              
            </div>

          </div>
        </div>
      </div>
    </div>
    <!-- dashboard Secton  End  -->
    