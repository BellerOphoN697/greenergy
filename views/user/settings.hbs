<script>
  document.getElementById('loginform').addEventListener('submit', function(event) {
    var newPassword = document.getElementById('newpassword').value;
    var confirmPassword = document.getElementById('confirmpassword').value;

    if (newPassword !== confirmPassword) {
      alert("New password and confirm password must match.");
      event.preventDefault(); 
    }

    if (newPassword.length < 8) {
      alert("Password must be at least 8 characters long.");
      event.preventDefault(); 
    }
    var specialChars = /[!@#$%^&*(),.?":{}|<>]/g; // Check for special characters
    var uppercaseChars = /[A-Z]/g; // Check for uppercase letters
    var numberChars = /[0-9]/g; // Check for numbers

    if (!specialChars.test(newPassword)) {
      alert("Password must contain at least one special character.");
      event.preventDefault(); 
    }

    if (!uppercaseChars.test(newPassword)) {
      alert("Password must contain at least one uppercase letter.");
      event.preventDefault(); 
    }

    if (!numberChars.test(newPassword)) {
      alert("Password must contain at least one number.");
      event.preventDefault(); 
    }
  });
</script>